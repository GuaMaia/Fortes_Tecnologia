    SQL.Strings = (
      '                  select abe.id,abe.bomba_id,'
      '    abe.data_abastecimento ,abe.qtd,'
      '    abe.valor,abe.valor_imposto,'
      '    '
      '   bomb.NUM_BOMBA,'
      'case when tanq.TIPO = 1 then '#39'GASOLINA'#39' '
      '    ELSE '#39#211'LEO DIESEL'#39' '
      '    END AS DESCRICAO'
      '    '
      'FROM TBABASTECIMENTOS as abe'
      'inner join TBBOMBAS as bomb on  bomb.id = abe.bomba_id'
      'inner join TBTANQUE as tanq on  tanq.ID =  bomb.TANQUE_ID'
